<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- penjualan_kue.produk tree view -->
    <record id="produk_view_tree" model="ir.ui.view">
        <field name="name">Daftar Produk</field>
        <field name="model">penjualan_kue.produk</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="nama"/>
                <field name="deskripsi"/>
                <field name="harga"/>
                <field name="pengeluaran"/>
                <field name="resep_ids"/>
            </tree>
        </field>
    </record>

    <!-- penjualan_kue.produk form view -->
    <record id="produk_view_form" model="ir.ui.view">
        <field name="name">Produk Form</field>
        <field name="model">penjualan_kue.produk</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="nama"/>
                        <field name="deskripsi"/>
                    </group>
                    <group>
                        <!-- Add your fields here -->
                        <field name="harga"/>
                        <field name="pengeluaran"/>
                    </group>
                    <group>
                        <!-- Add your fields here -->
                        <field name="resep_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- penjualan_kue.produk action window -->
    <record id="produk_action" model="ir.actions.act_window">
        <field name="name">Atur Produk</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">penjualan_kue.produk</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
