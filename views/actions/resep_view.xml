<?xml version="1.0" encoding="utf-8"?>
    <odoo>

    <!-- penjualan_kue.resep tree view -->
    <record id="resep_view_tree" model="ir.ui.view">
        <field name="name">Daftar Resep</field>
        <field name="model">penjualan_kue.resep</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="bahan_bahan"/>
                <field name="cara_pembuatan"/>
            </tree>
        </field>
    </record>

        <!-- penjualan_kue.resep action window -->
        <record id="resep_action" model="ir.actions.act_window">
            <field name="name">Atur Resep</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">penjualan_kue.resep</field>
            <field name="view_mode">tree,form</field>
        </record>
